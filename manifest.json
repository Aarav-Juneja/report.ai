{
  "manifest_version": 2,
  "name": "report.ai",
  "description": "Word count",
  "version": "2.0",
  "browser_action": {
    "default_popup": "hello.html"
  },
  "permissions" : ["storage", "http://127.0.0.1:5000/*"],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [{
    "matches": ["https://*/*","http://*/*"],
    "js": ["./content.js"]
    }],
  "background":{
    "scripts" : ["./popup.js"]
  }
}